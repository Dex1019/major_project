<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amitshekhar.tflite.ImageActivity">

    <ImageView
        android:id="@+id/iv_load_internal_image"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@drawable/grey_bg_dashed_border"
        android:src="@drawable/picture"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/tv_internal_image_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_load_internal_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />


</RelativeLayout>
